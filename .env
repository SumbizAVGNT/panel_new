##############################
# MoonRein – Environment file
# Этот файл читается при старте сервера (run.py -> python-dotenv).
# Значения можно править без перезапуска, если используется reloader.
##############################

##############
# Flask / App
##############
# Производственная среда (влияет на поведение Flask)
FLASK_ENV=production
# Включить отладчик и autoreload в dev (1/0, true/false/yes/no/on/off)
FLASK_DEBUG=0

# Сетевые параметры dev-сервера (для prod используйте gunicorn/uwsgi)
HOST=0.0.0.0
PORT=5000

# Секрет для сессий/CSRF. Сгенерируйте случайный:
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_me_to_a_random_long_value

################
# App Settings
################
# Требовать авторизацию для доступа к панели (1/0)
REQUIRE_LOGIN=1
# Срок жизни сессии в часах
SESSION_HOURS=12
# Тема интерфейса: dark | light | auto
THEME=dark
# Основной акцент (hex)
ACCENT=#5865F2
# Логи: INFO | WARNING | ERROR | DEBUG
LOG_LEVEL=INFO
# Хранить логи дней
LOG_RETENTION_DAYS=14

